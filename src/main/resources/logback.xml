<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="File" class="ch.qos.logback.core.FileAppender">
        <file>C:\Users\thisu\Desktop\AAD\pos-backend-phase-02\app.log</file>
        <append>true</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Hibernate logging levels -->
    <logger name="org.hibernate" level="ERROR" additivity="false">
        <appender-ref ref="File" />
    </logger>
    <logger name="org.hibernate.engine" level="ERROR" additivity="false">
        <appender-ref ref="File" />
    </logger>
    <logger name="org.hibernate.SQL" level="ERROR" />
    <logger name="org.hibernate.type.descriptor.sql.BasicBinder" level="ERROR" />
    <logger name="org.hibernate.stat" level="OFF" />
    <logger name="org.hibernate.internal.util.EntityPrinter" level="OFF" />
    <logger name="org.hibernate.persister.entity.AbstractEntityPersister" level="OFF" />

    <root level="DEBUG">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="File" />
    </root>
</configuration>
